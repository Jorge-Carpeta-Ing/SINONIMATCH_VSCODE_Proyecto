{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-javafx",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "${workspaceFolder}/bin",
                "--module-path",
                "${workspaceFolder}/lib/javafx-sdk-24.0.1/lib",
                "--add-modules",
                "javafx.controls,javafx.fxml,javafx.media",
                "${workspaceFolder}/src/sinonimatch/Main.java",
                "${workspaceFolder}/src/sinonimatch/*/*.java"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}